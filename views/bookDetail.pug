

block content
  main.main
    .card-container
        .card
            .card__header
                .card__picture
                    .card__picture-overlay &nbsp;
                h3.heading-tertirary
                    span=book.title

            .card__details
                h4.card__sub-heading=book.author
                p.card__text=book.description

            .card__footer
                a.btn.btn--green.btn--small(href=`/?book=${book.id}&user=${user.id}`) Issue Book
            .card__footer
                a.btn.btn--green.btn--small(href="/") Back To Home