header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All Books
  nav.nav.nav--user
    if user
        if user.isAdmin
           a.nav__el(href="/createBook") CreateBook
           a.nav__el(href="/deleteBook") DeleteBook
           a.nav__el.nav__el--logout LogOut
           a.nav__el(href='/me')
               span= user.name.split(' ')[0]
        else 
            a.nav__el.nav__el--logout LogOut
            a.nav__el(href='/me')
                span= user.name.split(' ')[0]

    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up