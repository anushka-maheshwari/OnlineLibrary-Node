extends base

block content
  main.main
    .card-container
        each book in books
            .card
                .card__header
                    .card__picture
                        .card__picture-overlay &nbsp;
                    h3.heading-tertirary
                        span=book.title

                .card__details
                    h4.card__sub-heading=book.author
                    p.card__text=book.description.substr(0,250)+"........"

                .card__footer
                    if user
                        if user.isAdmin
                            a.btn.btn--green.btn--small#detailsbtn(href=`/book/${book.title}`) Details
                            a.btn.btn--green.btn--small#detailsbtn(href=`/${book.title}`) UPDATE
                        else
                            a.btn.btn--green.btn--small#detailsbtn(href=`/book/${book.title}`) Details
                    else
                            a.btn.btn--green.btn--small#detailsbtn(href=`/book/${book.title}`) Details